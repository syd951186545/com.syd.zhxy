<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/include"
        layout="@layout/activity_top"/>
    <Button
        android:layout_marginTop="20px"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:text="校园卡"
        android:textSize="30dp"
        android:gravity="left"

        android:background="@drawable/yuanbianshape"/>
    <Button

        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:text="门禁卡"
        android:textSize="30dp"
        android:gravity="left"

        android:background="@drawable/ybshape1"/>
    <Button

        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:text="图书馆借阅卡"
        android:textSize="30dp"
        android:gravity="left"

        android:background="@drawable/ybshape2"/>
    <Button

        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:text="学生证"
        android:textSize="30dp"
        android:gravity="left"

        android:background="@drawable/ybshape3"/>
    <Button

        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:text="面包店会员卡"
        android:textSize="30dp"
        android:gravity="left"

        android:background="@drawable/ybshape4"/>

    <Button
        android:id="@+id/addcard"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="50px"
        android:background="@drawable/blackbiankuang"
        android:text="+ 添加"
        android:textColor="#FF0000"
        android:textSize="20dp" />




</LinearLayout>