<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smoke_white"
    android:orientation="vertical">
    <include
        android:id="@+id/include"
        layout="@layout/activity_top"
        />
    <LinearLayout
        android:layout_width="@dimen/big_button_width"
        android:layout_height="200px"
        android:layout_gravity="center"
        android:layout_marginTop="50px"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="100px"

            android:orientation="horizontal"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/blackbiankuang"
            >


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/yue"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="我的余额（元）"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="20dp"/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:background="@drawable/blackbiankuang">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/yinhangka"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="我的银行卡"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"/>
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/big_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/blackbiankuang"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="40px"
                android:layout_width="@dimen/general_button"
                android:layout_height="@dimen/general_button"
                android:src="@drawable/chongzhi"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="充值"
                android:textSize="15dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blackbiankuang"
            android:gravity="center"
            android:layout_weight="1"

            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="40px"
                android:layout_width="@dimen/general_button"
                android:layout_height="@dimen/general_button"
                android:src="@drawable/jiaoyijilu"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="交易记录"
                android:textSize="15dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/blackbiankuang"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="40px"
                android:layout_width="@dimen/general_button"
                android:layout_height="@dimen/general_button"
                android:src="@drawable/shezhi"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="支付管理"
                android:textSize="15dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>